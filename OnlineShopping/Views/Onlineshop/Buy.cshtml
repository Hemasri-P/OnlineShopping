@model List<OnlineShopping.Models.Product>



<br/>

    <div class="row">
    @if (Model != null)
    {
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <img src=/@item.Pimage height="90px" />
                <div>@item.Pid</div>
                <div>@item.Pname</div>
                <div>@item.Description</div>
                <div>@item.Price</div>
                

            </div>
        }
        <form method="post">

            <input type="text" name="qty" class="form-control" placeholder="Enter qty" /><br />

            <input type="submit" value="Confirm order" class="btn btn-info" />


        </form>
    }
    
</div>
<div class="btn btn-danger">

    @ViewData["msg"]

</div>

